@page
@model PRN___Final_Project.Pages.CRUD.PilotPages.IndexModel

@{
    Layout = "Shared/_AdminLayout";
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Pilot Name
            </th>
            <th>
               Status
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Pilots) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PilotName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.PilotId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.PilotId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.PilotId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
