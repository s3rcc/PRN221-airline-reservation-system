@page "/create-booking"
@model PRN___Final_Project.Pages.CRUD.BookingManager.CreateModel

@{
    ViewData["Title"] = "Create Booking";
    var flightData = HttpContext.Session.GetObjectFromJson<FlightData>("FlightData");
}

<h1>Create Booking</h1>

<h4>Booking Information</h4>
<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Booking.UserId" class="form-label"></label>
                    <input asp-for="Booking.UserId" class="form-control" readonly />
                    <span asp-validation-for="Booking.UserId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Booking.FlightId" class="form-label"></label>
                    <input asp-for="Booking.FlightId" class="form-control" readonly />
                    <span asp-validation-for="Booking.FlightId" class="text-danger"></span>
                </div>

                @if (!flightData.IsOneWay)
                {
                    <div class="mb-3">
                        <label asp-for="Booking.ReturnFlightId" class="form-label"></label>
                        <input asp-for="Booking.ReturnFlightId" class="form-control" readonly />
                        <span asp-validation-for="Booking.ReturnFlightId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Booking.ReturnClassType" class="form-label"></label>
                        <input asp-for="Booking.ReturnClassType" class="form-control" readonly />
                        <span asp-validation-for="Booking.ReturnClassType" class="text-danger"></span>
                    </div>
                }

                <div class="mb-3">
                    <label asp-for="Booking.BookingDate" class="form-label"></label>
                    <input asp-for="Booking.BookingDate" class="form-control" readonly />
                    <span asp-validation-for="Booking.BookingDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Booking.TotalPrice" class="form-label"></label>
                    <input asp-for="Booking.TotalPrice" class="form-control" readonly />
                    <span asp-validation-for="Booking.TotalPrice" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Booking.PaymentStatus" class="form-label"></label>
                    <input asp-for="Booking.PaymentStatus" class="form-control" readonly />
                    <span asp-validation-for="Booking.PaymentStatus" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" asp-for="Booking.Status" readonly />
                    <label class="form-check-label" asp-for="Booking.Status"></label>
                </div>

                <div class="mb-3">
                    <label asp-for="Booking.AdultNum" class="form-label"></label>
                    <input asp-for="Booking.AdultNum" class="form-control" readonly />
                    <span asp-validation-for="Booking.AdultNum" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Booking.ChildNum" class="form-label"></label>
                    <input asp-for="Booking.ChildNum" class="form-control" readonly />
                    <span asp-validation-for="Booking.ChildNum" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Booking.BabyNum" class="form-label"></label>
                    <input asp-for="Booking.BabyNum" class="form-control" readonly />
                    <span asp-validation-for="Booking.BabyNum" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Booking.ClassType" class="form-label"></label>
                    <input asp-for="Booking.ClassType" class="form-control" readonly />
                    <span asp-validation-for="Booking.ClassType" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Create Booking</button>
                </div>
            </form>
            <div class="mt-3">
                <a asp-page="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
