            </div>
            <div class="form-group">
                <label asp-for="Booking.AdultNum" class="control-label"></label>
                <input asp-for="Booking.AdultNum" class="form-control" />
                <span asp-validation-for="Booking.AdultNum" class="text-danger"></span>
