    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Booking.UserId" class="control-label"></label>
                <select asp-for="Booking.UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Booking.FlightId" class="control-label"></label>
                <select asp-for="Booking.FlightId" class ="form-control" asp-items="ViewBag.FlightId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Booking.ReturnFlightId" class="control-label"></label>
                <select asp-for="Booking.ReturnFlightId" class ="form-control" asp-items="ViewBag.ReturnFlightId"></select>
