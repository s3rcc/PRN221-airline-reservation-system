@page "/manage-bookings"
@model PRN___Final_Project.Pages.CRUD.BookingManager.IndexModel

@{
    Layout = "Shared/_AdminLayout";
    ViewData["Title"] = "Index";
    Layout = "_DashboardLayout";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Booking Date
            </th>
            <th>
                Total Price
            </th>
            <th>
                Payment Status
            </th>
            <th>
                Status
            </th>
            <th>
                AdultNum
            </th>
            <th>
                ChildNum
            </th>
            <th>
                BabyNum
            </th>
            <th>
                User
            </th>
            <th>
                Flight
            </th>
            <th>
                ReturnFlight
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Booking) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BookingDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdultNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChildNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BabyNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Flight.FlightNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReturnFlight.FlightNumber)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.BookingId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.BookingId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.BookingId">Delete</a> |
                    <a asp-page="/Payment" asp-route-id="@item.BookingId">Payment</a>
            </td>
        </tr>
}
    </tbody>
</table>
