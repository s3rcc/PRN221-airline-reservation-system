@page
@model PRN___Final_Project.Pages.CRUD.FlightManager.FlightDetailsModel
@{
}

<div class="container mt-5">
    <h2>Flight Details</h2>

    <div class="card p-4 mt-4">
        <p><strong>Origin:</strong> @Model.Origin</p>
        <p><strong>Destination:</strong> @Model.Destination</p>
        <p><strong>Departure Date:</strong> @Model.DepartureDate.ToString("dddd, dd MMMM yyyy")</p>
        @if (!Model.IsOneWay)
        {
            if (Model.ReturnDate == null)
            {
                <p><strong>Return Flight:</strong> <span class="text-warning">Not selected</span></p>
                <a asp-page="/CRUD/FlightManager/ReturnFlights"
                   asp-route-origin="@Model.Origin"
                   asp-route-destination="@Model.Destination"
                   asp-route-departureDate="@Model.DepartureDate.ToString("yyyy-MM-dd")"
                   asp-route-totalPassengers="@Model.TotalPassengers"
                   class="btn btn-warning">Select Return Flight</a>
            }
            else
            {
                <p><strong>Return Date:</strong> @Model.ReturnDate?.ToString("dddd, dd MMMM yyyy")</p>
            }
        }
        <p><strong>Total Passengers:</strong> @Model.TotalPassengers</p>
    </div>
</div>