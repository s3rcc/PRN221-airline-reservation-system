@page "/manage-users"
@model MyProject.Pages.CRUD.UserManager.UserManagementModel

@{
    ViewData["Title"] = "Manage Users";
    Layout = "_DashboardLayout";
}

<h2>Manage Users</h2>

<!-- Button to open the modal for adding a new User -->
@* <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#userModal" onclick="clearModal()">
    Add New User
</button> *@

<!-- User List -->
<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Gender</th>
            <th>Date of Birth</th>
            <th>CCCD</th>
            <th>Tier</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.Gender</td>
                <td>@user.DoB.ToShortDateString()</td>
                <td>@user.CCCD</td>
                <td>@user.Tier.TierName</td>
                <td>
                    <button class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#userModal"
                            onclick="setEditModal('@user.Id', '@user.Email', '@user.Gender', '@user.DoB.ToString("yyyy-MM-dd")', '@user.CCCD', '@user.TierId')">
                        Edit
                    </button>
                    <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteConfirmModal"
                            onclick="setDeleteModal('@user.Id')">
                        Delete
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Create/Edit Modal -->
<div class="modal fade" id="userModal" tabindex="-1" aria-labelledby="userModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="userModalLabel">Add/Edit User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <input type="hidden" id="UserId" asp-for="User.Id" />
                    <div class="mb-3">
                        <label asp-for="User.Email" class="form-label"></label>
                        <input id="UserEmail" asp-for="User.Email" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label asp-for="User.Gender" class="form-label"></label>
                        <input id="UserGender" asp-for="User.Gender" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label asp-for="User.DoB" class="form-label"></label>
                        <input id="UserDoB" asp-for="User.DoB" type="date" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label asp-for="User.CCCD" class="form-label"></label>
                        <input id="UserCCCD" asp-for="User.CCCD" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label asp-for="User.TierId" class="form-label"></label>
                        <select id="UserTierId" asp-for="User.TierId" class="form-control" required>
                            <option value="">-- Select Tier --</option>
                            @foreach (var tier in Model.Tiers)
                            {
                                <option value="@tier.TierId">@tier.TierName</option>
                            }
                        </select>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteConfirmModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this user?
            </div>
            <div class="modal-footer">
                <form method="post" asp-page-handler="Delete">
                    <input type="hidden" name="id" id="deleteUserId" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function setEditModal(id, email, gender, dob, cccd, tierId) {
            document.getElementById("UserId").value = id;
            document.getElementById("UserEmail").value = email;
            document.getElementById("UserGender").value = gender;
            document.getElementById("UserDoB").value = dob;
            document.getElementById("UserCCCD").value = cccd;
            document.getElementById("UserTierId").value = tierId;

        }

        function setDeleteModal(id) {
            document.getElementById("deleteUserId").value = id;
        }

        function clearModal() {
            document.getElementById("UserId").value = "";
            document.getElementById("UserEmail").value = "";
            document.getElementById("UserGender").value = "";
            document.getElementById("UserDoB").value = null;
            document.getElementById("UserCCCD").value = "";
            document.getElementById("UserTierId").value = "";

        }
    </script>
}
