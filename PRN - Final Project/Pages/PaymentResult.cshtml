@model PRN___Final_Project.Pages.PaymentResultModel
<h2>Payment Result</h2>

@if (Model.Status == "success")
{
    <p class="text-success">Payment successful! Thank you for using our service.</p>
}
else if (Model.Status == "failed")
{
    <p class="text-danger">Payment failed: @Model.Message</p>
}

<a asp-page="/Index">Return to homepage</a>
