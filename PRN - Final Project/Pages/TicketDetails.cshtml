@page "/ticket-details"
@model PRN___Final_Project.Pages.TicketDetailsModel
@{
}

@{
    ViewData["Title"] = "Ticket Details";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Ticket Details for Booking #@Model.BookingId</h2>

    <div class="row row-cols-1 row-cols-md-2 g-4">
        @foreach (var ticket in Model.Tickets)
        {
            <div class="col">
                <div class="card ticket-card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@ticket.ClassType Class - Seat: @ticket.SeatNumber</h5>
                        <p class="card-text">
                            <strong>Ticket Type:</strong> @ticket.TicketType <br />
                            <strong>Issued Date:</strong> @ticket.IssuedDate.ToString("dd/MM/yyyy") <br />
                            <strong>Carry-on Luggage:</strong> @ticket.Carryluggage<br />
                            <strong>Checked Baggage:</strong> @ticket.Baggage
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Custom Styles -->
<style>
    .ticket-card {
        border: 1px solid #4CAF50;
        background-color: #FFFBE6;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
    }

        .ticket-card .card-title {
            color: #347928;
            font-weight: 600;
        }

    .card-footer .btn-primary {
        background-color: #0288D1;
        border: none;
    }

        .card-footer .btn-primary:hover {
            background-color: #026aa7;
        }
</style>