<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Manager Dashboard</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- FontAwesome CSS -->
    <link rel="stylesheet" href="~/css/fontAwesome.css" />

    <!-- Additional CSS (chỉ giữ những cái cần thiết) -->
    <link rel="stylesheet" href="~/css/tooplate-style.css" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PRN___Final_Project.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Manager Dashboard</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/CRUD/AirPlaneManager/Index">Air Plane</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/CRUD/BookingManager/Index">Booking</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/CRUD/FlightManager/Index">Flight</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/CRUD/PilotManager/Index">Pilot</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/CRUD/LocationManager/Index">Location</a>
                        </li>
                        <li class="nav-item">
                            <form method="post" asp-page-handler="LogOut" asp-page="/Login">
                                <button type="submit" class="btn btn-outline-dark">Log out</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-dark text-white py-4">
        <div class="container text-center">
            <ul class="list-unstyled d-flex justify-content-center mb-3">
                <li class="ms-3"><a href="#" class="text-white"><i class="fa fa-facebook"></i></a></li>
                <li class="ms-3"><a href="#" class="text-white"><i class="fa fa-twitter"></i></a></li>
                <li class="ms-3"><a href="#" class="text-white"><i class="fa fa-linkedin"></i></a></li>
                <li class="ms-3"><a href="#" class="text-white"><i class="fa fa-rss"></i></a></li>
                <li class="ms-3"><a href="#" class="text-white"><i class="fa fa-behance"></i></a></li>
            </ul>
            <p class="mb-0">&copy; @DateTime.Now.Year Manager Dashboard. All rights reserved.</p>
        </div>
    </footer>

    <!-- Bootstrap 5 JS and dependencies (Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
