@using BussinessObjects
@inject SignInManager<User> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<ul class="nav nav-pills flex-column">
    <li class="nav-item"><a class="nav-link @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index">Ho so</a></li>
    <li class="nav-item"><a class="nav-link @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-page="./Email">Email</a></li>
    <li class="nav-item"><a class="nav-link @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">Mat Khau</a></li>

    @if (User.IsInRole("Member"))
    {
        <li class="nav-item"><a class="nav-link @ManageNavPages.ListBookingNavClass(ViewContext)" id="list-booking" asp-page="./ListBooking">Bookings</a></li>
        <li class="nav-item"><a class="nav-link @ManageNavPages.ListTicketNavClass(ViewContext)" id="list-ticket" asp-page="./ListTicket">Tickets</a></li>
    }
</ul>
